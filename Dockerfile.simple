# Ultra-simple Dockerfile for Railway
FROM node:18-alpine

WORKDIR /app

# Copy everything
COPY . .

# Install pnpm
RUN npm install -g pnpm

# Install dependencies
RUN pnpm install

# Build
RUN pnpm build

# Expose ports
EXPOSE 3000 5174

# Start services
CMD ["sh", "-c", "pnpm start:bot & pnpm start:web"]
