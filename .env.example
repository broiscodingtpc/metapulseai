# MetaPulse AI Bot - Environment Variables Template
# Copy this file to .env and fill in your actual values

# PumpPortal API
PUMPPORTAL_API_KEY=your_pumpportal_api_key_here

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Bot Behavior Settings
DIGEST_CRON=0 * * * *           # every hour at minute 0
ROLLUP_WINDOW_SEC=3600          # 1 hour
TOP_TOKENS_LIMIT=10
TOP_METAS_LIMIT=5
MIN_UNIQUE_BUYERS=4
MAX_PRICE_IMPACT_01=25          # %
MIN_BUYER_SELLER_RATIO=1.1

# AI Configuration (Optional - uses heuristic fallback if not provided)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.1-8b-instant

# Server Ports
BOT_PORT=3000
WEB_PORT=5174

# Railway/Production Settings
NODE_ENV=production